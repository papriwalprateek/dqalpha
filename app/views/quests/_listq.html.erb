<%if current_user%>
<div id = "start_thread"> 
<a style="cursor:pointer;"><p id = "start_thread_button">Start a new thread</p></a>
</div>
<%end%>
<br>
<%if @documents%>
<%if @scilab_results%>
			<p style="margin-top:30px;margin-bottom:5px;color:#666;font-size: 14px;"><b>Scilab help</b></p>
			<hr>
			<%begin%>
				<%=raw@callseq%>
				<%=raw@refsec%>
			<%rescue%>
			<%end%>
			<hr>
		<%end%>
<p style="margin-top:30px;margin-bottom:5px;color:#666;font-size: 14px;"><b>Mailing List</b></p>
			<hr>
	<%@documents.each do |d|%>
		<%@d=d.searchable%>
		<%if d.searchable_type=="Qmail"%>
			<%result_q = @d.q%>
			<%url = result_q.id.to_s()+"?qmail_id="+@d.id.to_s()%>
			<%result_qmail = @d%>
		<%else%>
			<%url = @d.id.to_s()%>
			<%result_q = @d%>
			<%result_qmail = @d.qmails.first()%>
		
		<%end%>
		<a class= "live_link" href = <%= '/quests/'+@quest.id.to_s()+'/qs/'+url%>>
			<div>
				<h2 style = "margin-top:10px;margin-left:3px;padding:5px;color:#666;font-size:1.8em;line-height:1.3em;font-family:BentonSans;"><%=result_q.title%></b></h2>
			</div>
			
				<%if result_qmail%>
				
				<div style = "margin-left:8px;font-size:14px;" class = "example">
					<%=raw result_qmail.content%>
					
				</div>
			<div style="width:100%;">
				<div style="float:right;margin-right:5%;margin-bottom:10px;">
					<p class = "post_user">posted <%=result_qmail.created_at.strftime("%b, %d")%> by <%=result_qmail.user.name%></p>
				</div>
			</div>
			<%end%>
		</a>
		<hr>
		

	<%end%>
	
<%elsif @qs%>

<% @qs.order('created_at DESC').each do |q| %>
	<a class= "live_link" href = <%= '/quests/'+@quest.id.to_s()+'/qs/'+q.id.to_s()%>>
	<span>
	<div class = "qs_tiles">
	<%q_qmails = q.qmails%>
	<%if q_qmails.last%>
	<%last_qmail = q_qmails.order("created_at").last%>	
	<div style = "font-size:2em;margin-left:8px;padding:0px;margin-bottom:0px;padding-top:5px;font-family: BentoSans;"><%=q.title%> <b>(<%=q_qmails.count%>)</b></div>
	<%u_id = last_qmail.user_id%>
	<div style="font-size:1.2em;margin-left:8px;padding-bottom:2px;font-family: BentoSans;color:#888;">Last post <%=last_qmail.created_at.strftime("%b, %d")%> by <b><%=last_qmail.user.name%></b></div>
	<%else%>
	<div style = "font-size:2em;margin-left:8px;padding:0px;margin-bottom:0px;padding-top:5px;font-family: BentoSans;"><%=q.title%> <b>(0)</b></div>	
	<div style="font-size:1.2em;margin-left:8px;padding-bottom:2px;font-family: BentoSans;color:#888;">No posts</div>
	<%end%>
	</div>
	</span></a>
<%end%>
<%end%> 

<script>$(function() {
  $('p#start_thread_button').click(function(){ 
  $(".quests_show").html("<%=escape_javascript(render"qs/form")%>");      
        window.history.pushState(null, document.title,"#");
 
  });
   $('.example').truncate({max_length: 24});
});

</script> 