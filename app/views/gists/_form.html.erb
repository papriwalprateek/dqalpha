
<%= form_for([current_user, current_user.gists.build], :remote => true,  :update => "gists_list", :position => :top) do |f| %>
  
   <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
