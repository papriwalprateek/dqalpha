<h1>Listing gists</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @gists.each do |gist| %>
  <tr>
    <td><%= gist.title %></td>
    <td><%= gist.content %></td>
    <td><%= gist.user_id %></td>
    <td><%= link_to 'Show', gist %></td>
    <td><%= link_to 'Edit', edit_gist_path(gist) %></td>
    <td><%= link_to 'Destroy', gist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

